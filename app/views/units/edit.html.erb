<%= form_for :unit, url: unit_path(@unit), method: :put do |f| %>
    <div class="form-horizontal">-
      <div class="form-group">

        <div class="col-md-4">

          <div class="col-md-1">

            <p><%= f.label :name %></p>
          </div>

          <div class="col-md-1">

            <p><%= f.label :print_name %></p>
          </div>
          <div class="col-md-4">

            <%= f.text_field :name, :class => "form-control", :placeholder => " Name" %>
          </div>
        </div>
        <div class="col-md-offset-1">
          <p><%= f.submit(type:"submit", class:"btn btn-primary", value: "Save") %></p>
        </div>

<% end %>
</div>
</div>