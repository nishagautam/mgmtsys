<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="well">

<%= form_for :unit, url: units_path do |f| %>
      <% if @unit.errors.any? %>
          <div class="alert-danger">
            <h1>
              <%= pluralize(@unit.errors.count, "error") %>
              occured
            </h1>
            <ul>
              <% @unit.errors.full_messages.each do |e| %>
                  <li> <%= e %> </li>
              <% end %>
            </ul>
          </div>
      <% end %>
    <div class="form-horizontal">-
        <div class="form-group">
          <div class="row">
            <%= f.label :name, :class => "col-md-2" %>
            <div class="col-md-4">
              <%= f.text_field :name, :class => "form-control", :placeholder => "name" %> </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :print_name, :class => "col-md-2" %>
            <div class="col-md-4">
              <%= f.text_field :print_name, :class => "form-control", :placeholder => "print_name" %>
            </div>
          </div>
        </div>
          <div class="form-group">
          <div class="row">
            <div class="col-md-offset-2 col-md-4">
              <%= f.submit(type: 'submit', class: "btn btn-primary") %>
            </div>
          </div>
          </div>
        </div>
<% end %>
  </div>
      </div>
    </div>
  </div>