
<div class="container">
  <h3 class="col-md-offset-4">Company Profile</h3>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 well">
      <% if CompanyProfile.count == 0 %>
          <div class="row">
            <div class="col-sm-12">
              <h3>No records !!</h3></div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-5">
              <a class="btn btn-success btn-block" href="<%= new_company_profile_path %>"><i class="fa fa-plus-circle" aria-hidden="true">
                Add New </i></a>
            </div>
          </div>
      <% end %>
      <% @company_profiles.each do |company_profile| %>
          <div class="row">
            <div class="col-md-5">
              <p><b>Name:</b></p>
              <p><b>VDC/Municipality:</b></p>
              <p><b>Ward no.:</b></p>
              <p><b>Phone:</b></p>
              <p><b>VAT pan no.:</b></p>
              <p><b>Logo url:</b></p>
              <p><b>District:</b></p>
              <p><b>Zone:</b></p>
            </div>
            <div class="col-md-7">
              <p><%= company_profile.name %></p>
              <p><%= company_profile.vdc_mun %></p>
              <p><%= company_profile.ward_no %></p>
              <p><%= company_profile.phone %></p>
              <p><%= company_profile.vat_pan_num %></p>
              <p><a href="<%= company_profile.logo_url %>">View</a></p>
              <p><%= company_profile.district %></p>
              <p><%= company_profile.zone %></p>
            </div>
          </div>
          <div class="col-md-6 col-md-offset-3">
            <a class="btn btn-primary btn-block" href="<%= edit_company_profile_path(company_profile) %>">
              <i class="fa fa-plus" aria-hidden="true">
                Edit Profile </i>
            </a>
          </div>
      <% end %>
    </div>
  </div>
</div>