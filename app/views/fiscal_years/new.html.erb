<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="well">
  <%= form_for :fiscal_year, url: fiscal_years_path do |f| %>
      <% if @fiscal_year.errors.any? %>
          <div class="alert-danger">
            <h1>
              <%= pluralize(@fiscal_year.errors.count, "error") %>
              occured
            </h1>
            <ul>
              <% @fiscal_year.errors.full_messages.each do |e| %>
                  <li> <%= e %> </li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-horizontal">-
        <div class="form-group">
          <div class="row">
            <%= f.label :name, :class => "col-md-2" %>
            <div class="col-md-4">
              <%= f.text_field :name, :class => "form-control", :placeholder => "name" %> </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :start_date, :class => "col-md-2" %>
            <div class="col-md-4">
              <%= f.text_field :start_date, :class => "form-control", :id => "startdate", :placeholder => "start date" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <%= f.label :end_date, :class => "col-md-2" %>
            <div class="col-md-4">
              <%= f.text_field :end_date, :class => "form-control", :id => "enddate", :placeholder => "end date" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-offset-2 col-md-4">
              <%= f.submit(type: 'submit', class: "btn btn-primary", value: "save") %>
            </div>
          </div>
        </div>
      </div>
            </div>
            </div>
            </div>
  <% end %>
</div>
<script>
  $('#startdate').datepicker({
    format: "yyyy/mm/dd",
  }).on('changeDate', function (e) {
    $(this).datepicker('hide');
  });
</script>

<script>
  $('#enddate').datepicker({
    format: "yyyy/mm/dd",
  }).on('changeDate', function (e) {
    $(this).datepicker('hide');
  });
</script>
